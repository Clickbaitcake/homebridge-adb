{
	"pluginAlias": "HomebridgeADB",
	"pluginType": "platform",
	"singular": true,
	"headerDisplay": "A simple homebridge script to control remote ADB enabled Android device",
	"footerDisplay": "For more information, see the [README](https://github.com/dwaan/homebridge-adb/blob/master/README.md)",
	"schema": {
	    "type": "object",
	    "properties": {
			"accessories": {
				"title": "Accessories",
				"type": "array",
				"required": true,
				"items": {
					"type": "object",
					"properties": {
						"name": {
							"type": "string",
							"title": "Device Name",
							"placeholder": "Type your device name",
							"type": "string",
							"minLength": 1,
							"required": true
						},
						"ip": {
							"type": "string",
							"title": "Device IP",
							"placeholder": "Type your device IP address",
							"type": "string",
							"format": "ipv4",
							"required": true
						},
						"interval": {
							"type": "number",
							"title": "Polling interval",
							"placeholder": "Check your device every n miliseconds",
							"type": "number"
						},
						"inputs": {
							"title": "Inputs",
							"type": "array",
							"items": {
								"type": "object",
								"properties": {
									"name": {
										"title": "App Name",
										"type": "string",
										"placeholder": "Your apps name",
										"required": true
									},
									"id": {
										"title": "App ID",
										"type": "string",
										"placeholder": "com.your.app.id",
										"required": true
									}
								}
							}
						}
					}
				}
			}
		}
	},
	"layout": [
		{
			"key": "accessories",
			"type": "array",
			"items": [
				{
					"type": "flex",
					"displayFlex": true,
					"items": [
						{
							"type": "flex",
							"displayFlex": true,
							"flex-direction": "row",
							"items": [
								{
									"key": "accessories[].name"
								}
							]
						},
						{
							"type": "flex",
							"displayFlex": true,
							"flex-direction": "row",
							"items": [
								{
									"key": "accessories[].ip",
									"flex": "1 1 50px"
								},
								{
									"key": "accessories[].interval",
									"flex": "1 1 50px"
								}
							]
						},
					    {
							"key": "accessories[].inputs",
					    	"type": "array",
							"expandable": true,
							"expanded": true,
							"description": "Add more inputs to your device. Check Homebridge logs for current App ID",
							"items": [
								{

									"type": "flex",
									"displayFlex": true,
									"flex-direction": "row",
									"items": [
										{
											"key": "accessories[].inputs[].id",
											"flex": "4 4 50px"
										},
										{
											"key": "accessories[].inputs[].name",
											"flex": "3 3 50px"
										}
									]
								}
							]
					    }
					]
				}
			]
		}
	]
}
